@model hagglehaul.Server.EmailViews.AcceptedBidEmail

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accepted Bid Notification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            max-width: 600px;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        p {
            color: #666;
            line-height: 1.6;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="container">
      
        <h1>Accepted Bid Notification</h1>
                <p>Dear @Model.DriverName,</p>
                <p>Your bid has been accepted. </p>
        <p><strong>Pickup Time:</strong> @Model.PickupTime</p>
        <p><strong>Rider Email:</strong> @Model.RiderEmail</p>
        <p><strong>Rider Phone:</strong> @Model.RiderPhone</p>
        <p><strong>Rider Name:</strong> @Model.RiderName</p>
        <p><strong>Pickup Location:</strong> @Model.PickupLocation</p>
        <p><strong>Destination Location:</strong> @Model.DestinationLocation</p>
        
        
        <p><strong>Bid Price:$</strong> @Model.Price</p>
        <a href="https://hagglehaul.azurewebsites.net" target="_blank">Click here for more details</a>

        <div class="footer">
        


            <p>This is an automated email, please do not reply.</p>
                                <p><strong>This email was sent to:</strong> @Model.DriverEmail</p>


        </div>
    </div>
</body>
</html>
