@model hagglehaul.Server.EmailViews.AcceptedBidEmail

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accepted Bid Notification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            max-width: 600px;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        p {
            color: #666;
            line-height: 1.6;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Accepted Bid Notification</h1>
        <p>Dear @Model.DriverName,</p>
        <p>Your bid has been accepted. Please review the details below:</p>
        <a href="https://hagglehaul.azurewebsites.net" target="_blank">Click here for more details</a>
        
        <p><strong>pickup time:</strong> @Model.pickupTime</p>
        <p><strong>rider email:</strong> @Model.RiderEmail</p>
        <p><strong>rider phone:</strong> @Model.RiderPhone</p>
        <p><strong>rider name:</strong> @Model.RiderName</p>
        <p><strong>start at::</strong> @Model.pickupLocation</p>
        <p><strong>end at::</strong> @Model.destinationLocation</p>
        <div class="footer">
            <p>This is an automated email, please do not reply.</p>
        </div>
    </div>
</body>
</html>
